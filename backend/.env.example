
# Backend Environment Variables
# Copy this file to .env and configure the values

# Server Port
PORT=5000

# MongoDB Connection String
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/resume_analyzer

# For MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/resume_analyzer?retryWrites=true&w=majority

# Node Environment
NODE_ENV=development

# Optional: JWT Secret (for future authentication)
# JWT_SECRET=your_super_secret_jwt_key_here

# Optional: File Upload Limits
# MAX_FILE_SIZE=5242880  # 5MB in bytes
